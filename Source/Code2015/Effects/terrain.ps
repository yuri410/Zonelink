
sampler2D texDet[4];
sampler2D texDif : register(s4);
sampler2D texColor : register(s5);
sampler2D texNrm : register(s6);

struct PSInput
{
    float2 GlobeCoord : TEXCOORD0; 
    float2 DetailCoord : TEXCOORD1; 
	float3 ModNormal : TEXCOORD2;
};

struct PSOutput
{
    float4 Color : COLOR;
};

PSOutput main(PSInput ip)
{
    PSOutput o;
    float3 lightDir = float3(1,0,0);
    
    float3 N = 2 * (float3)tex2D(texNrm, ip.DetailCoord) - 1;
    N.y *= 0.5;
    
    N += ip.ModNormal;
    N = normalize(N);
    
    float ndl = max(0, dot(N, lightDir));
	
	float4 index = tex2D(texDif, ip.GlobeCoord);
	
	float4 color = 0;
	
	int i;
	for (i=0;i<4;i++)
	{
		if (index[i]>0.01)
		{
			color += (index[i]) * tex2D(texDet[i], ip.DetailCoord);
			color += (index[i]) * tex2D(texDet[i], ip.DetailCoord*7);
		}
	}
	
    o.Color = ndl * ((color * 0.5) * tex2D(texColor, ip.GlobeCoord));
    return o;
}
