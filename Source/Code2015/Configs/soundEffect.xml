<?xml version="1.0" encoding="utf-8" ?>

<soundEffect>  
  <!--City-->
  <city> 
    <Control>Loop, Random</Control>
    <Type>World</Type>
    <Fadein></Fadein>
    <Medium>sfx-city1,sfx-city2,sfx-city3,sfx-city4</Medium>
    <Fadeout></Fadeout>
    <Volume>0.5</Volume>
  </city>
  
  <!--Forest-->
  <forest>
    <Control>Loop, Random</Control>
    <Type>World</Type>
    <Fadein></Fadein>
    <Medium>a_forest1,a_forest2,a_forest3</Medium>
    <Fadeout></Fadeout>
    <Volume>0.5</Volume>
  </forest>
  
  <!--bird-->
  <bird>
    <Control>Random</Control>
    <Type>World</Type>
    <Medium>birda1,birda2,birda3,birda4,birda5,birda6,birda7,birda8,birda9,birdb1,birdb2,birdb3</Medium>
    <Volume>0.5</Volume>
  </bird>

  <!--Lightning-->
  <lightning>
    <Control>Random</Control>
    <Type>World</Type>
    <Sounds>lightninga,lightningb,lightningc,lightningd</Sounds>   
  </lightning>
 

  <!--Oil-->
  <oil>
    <Control>Loop, Random</Control>
    <Type>World</Type>
    <Fadein>oil1</Fadein>
    <Medium>oil2a,oil2b,oil2c</Medium>
    <Fadeout>oil3</Fadeout>
    <Volume>0.5</Volume>
  </oil>
  
 
 
  <!--River-->
  <river>
    <Control>Loop, Random</Control>
    <Type>World</Type>
    <Fadein></Fadein>
    <Medium>sfx-water1, sfx-water2, sfx-water3</Medium>
    <Fadeout></Fadeout>
    <Volume>0.5</Volume>
  </river>
  
  <!--Sea-->
  <sea>
    <Control>Random, Ambient</Control>
    <Type>World</Type>
    <Fadein></Fadein>
    <Medium>waterb1, waterb2, waterb3</Medium>
    <Fadeout></Fadeout>
  </sea>
  
  <!--Wind-->
  <wind>
    <Control>Random, Ambient</Control>
    <Type>World</Type>
    <Sounds>wind1a,wind1b,wind1c,wind1d,wind2a,wind2b,wind2c,wind2d</Sounds> 
  </wind>
  
  <wolf>
    <Control>Random, Ambient</Control>
    <Type>World</Type>
    <Sounds>wolf1,wolf2,wolf3,wolf4,wolf5</Sounds>
  </wolf>
  <wuya>
    <Control>Random, Ambient</Control>
    <Type>World</Type>
    <Sounds>wuya1, wuya2</Sounds>
  </wuya>

</soundEffect>
