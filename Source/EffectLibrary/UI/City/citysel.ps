
sampler2D texDif : register(s0);

float4 k_d : register(c0);
float4 k_a : register(c1);
float3 lightDir : register(c2);
float4 i_a : register(c3);
float4 i_d : register(c4);

struct PSInput
{
    float2 TexCoord : TEXCOORD0;
};

struct PSOutput
{
    float4 Color : COLOR;
};

PSOutput main(PSInput ip)
{
    PSOutput o;
    
    float ndl = dot(float3(0,1,0), lightDir);
	
	float4 amb = i_a * k_a;
	float4 dif = i_d * k_d;
	dif.xyz *= max(0, ndl);
	
	float4 clr = tex2D(texDif, ip.TexCoord);
    o.Color = clr * (amb + dif);
    
    return o;
}
