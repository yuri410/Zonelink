sampler2D tex : register(s0);

struct PSInput
{
	float2 TexCoord : TEXCOORD0;
};

struct PSOutput
{
    float4 Color : COLOR;
};

PSOutput main(PSInput ip)
{
    PSOutput o;
    
	float d = 1.0 / 512.0;

	float4 color = 0;

	color += tex2D(tex, ip.TexCoord + float2(-5.0 * d, 0.0)) * 0.1;
	color += tex2D(tex, ip.TexCoord + float2(-4.0 * d, 0.0)) * 0.22;
	color += tex2D(tex, ip.TexCoord + float2(-3.0 * d, 0.0)) * 0.358;
	color += tex2D(tex, ip.TexCoord + float2(-2.0 * d, 0.0)) * 0.523;
	color += tex2D(tex, ip.TexCoord + float2(-1.0 * d, 0.0)) * 0.843;
	color += tex2D(tex, ip.TexCoord ) * 1.0;
	color += tex2D(tex, ip.TexCoord + float2( 1.0 * d, 0.0)) * 0.843;
	color += tex2D(tex, ip.TexCoord + float2( 2.0 * d, 0.0)) * 0.523;
	color += tex2D(tex, ip.TexCoord + float2( 3.0 * d, 0.0)) * 0.358;
	color += tex2D(tex, ip.TexCoord + float2( 4.0 * d, 0.0)) * 0.22;
	color += tex2D(tex, ip.TexCoord + float2( 5.0 * d, 0.0)) * 0.1;

	o.Color = color;
    return o;
}
