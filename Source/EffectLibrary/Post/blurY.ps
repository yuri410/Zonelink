sampler2D tex : register(s0);

struct PSInput
{
	float2 TexCoord : TEXCOORD0;
};

float4 main(PSInput ip) : COLOR
{
	float d = 1.0 / 512.0;

	float4 color = 0;

	color += tex2D(tex, ip.TexCoord + float2(0.0, -5.0 * d )) * 0.1;
	color += tex2D(tex, ip.TexCoord + float2(0.0, -4.0 * d )) * 0.22;
	color += tex2D(tex, ip.TexCoord + float2(0.0, -3.0 * d )) * 0.358;
	color += tex2D(tex, ip.TexCoord + float2(0.0, -2.0 * d )) * 0.523;
	color += tex2D(tex, ip.TexCoord + float2(0.0, -1.0 * d )) * 0.843;
	color += tex2D(tex, ip.TexCoord ) * 1.0;
	color += tex2D(tex, ip.TexCoord + float2(0.0,  1.0 * d )) * 0.843;
	color += tex2D(tex, ip.TexCoord + float2(0.0,  2.0 * d )) * 0.523;
	color += tex2D(tex, ip.TexCoord + float2(0.0,  3.0 * d )) * 0.358;
	color += tex2D(tex, ip.TexCoord + float2(0.0,  4.0 * d )) * 0.22;
	color += tex2D(tex, ip.TexCoord + float2(0.0,  5.0 * d )) * 0.1;

	return color;
}
